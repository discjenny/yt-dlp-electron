{
  "name": "yt-dlp-electron",
  "version": "0.1.0",
  "description": "yt-dlp-electron: Minimal yt-dlp desktop app (Electron + React + Bun)",
  "author": "wagner.dev",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "main": "dist/main.js",
  "build": {
    "productName": "yt-dlp-electron",
    "appId": "dev.wagner.ytdlp-electron",
    "icon": "build/icon.ico",
    "files": [
      "dist/**",
      "vendor/bin/**"
    ],
    "extraResources": [
      {
        "from": "vendor/bin",
        "to": "bin"
      },
      {
        "from": "LICENSES",
        "to": "licenses"
      },
      {
        "from": "build/icons",
        "to": "icons"
      }
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "AudioVideo",
      "artifactName": "yt-dlp-electron-${version}-linux.${ext}",
      "icon": "build/icons",
      "maintainer": "wagner.dev",
      "vendor": "wagner.dev"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "yt-dlp-electron-${version}-win-${arch}.${ext}",
      "signAndEditExecutable": false,
      "icon": "build/icons/icon.ico",
      "executableName": "yt-dlp-electron",
      "publisherName": "wagner.dev"
    },
    "nsis": {
      "shortcutName": "yt-dlp-electron",
      "installerIcon": "build/icons/icon.ico",
      "uninstallerIcon": "build/icons/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.music",
      "artifactName": "yt-dlp-electron-${version}-mac.${ext}",
      "publisherName": "wagner.dev"
    }
  },
  "scripts": {
    "icons": "node scripts/build_icons.mjs",
    "build:main": "bun build app/main.ts --target node --external electron --minify --outfile dist/main.js",
    "build:preload": "bun build app/preload.ts --target node --external electron --minify --outfile dist/preload.js",
    "build:renderer": "bun build renderer/index.html --outdir dist",
    "build:css": "postcss renderer/tailwind.css -o renderer/compiled.css",
    "build": "bun run icons && bun run build:css && bun run build:main && bun run build:preload && bun run build:renderer && node scripts/copy_media.mjs",
    "dev:renderer": "DEV_SERVER_PORT=5175 bun --hot scripts/dev_server.ts",
    "dev:media": "node scripts/dev_media.mjs",
    "dev:main": "bun build app/main.ts --target node --external electron --outfile dist/main.js --watch",
    "dev:preload": "bun build app/preload.ts --target node --external electron --outfile dist/preload.js --watch",
    "dev:electron": "wait-port 5175 && DEV=1 electron .",
    "dev:css": "postcss renderer/tailwind.css -o renderer/compiled.css --watch",
    "dev": "bun run dev:media && concurrently -k -n bun,css,main,preload,electron -c yellow,green,magenta,blue,cyan \"bun run dev:renderer\" \"bun run dev:css\" \"bun run dev:main\" \"bun run dev:preload\" \"bun run dev:electron\"",
    "start": "bun run build && electron .",
    "prune:yt-dlp": "bun run scripts/prune_yt_dlp.ts",
    "vendor:yt-dlp": "scripts/build_vendored_yt_dlp.sh",
    "vendor:ffmpeg": "scripts/build_vendored_ffmpeg.sh"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/bun": "latest",
    "@types/electron": "^1.6.12",
    "@types/node": "^24.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.1",
    "rcedit": "^4.0.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^4.1.0",
    "wait-port": "^1.1.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-switch": "^1.0.3",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.5.3"
  }
}
