{
  "name": "yt-dlp",
  "version": "0.1.0",
  "description": "Minimal yt-dlp desktop app (Electron + React + Bun)",
  "author": "yt-dlp Desktop",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "main": "dist/main.js",
  "build": {
    "productName": "yt-dlp Desktop",
    "appId": "com.example.ytdlpdesktop",
    "icon": "build/icon.ico",
    "files": [
      "dist/**",
      "vendor/bin/**"
    ],
    "extraResources": [
      {
        "from": "vendor/bin",
        "to": "bin"
      },
      {
        "from": "LICENSES",
        "to": "licenses"
      },
      {
        "from": "build/icons",
        "to": "icons"
      }
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "AudioVideo",
      "artifactName": "ytdlp-desktop-${version}-linux.${ext}",
      "icon": "build/icons"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "ytdlp-desktop-${version}-win-${arch}.${ext}",
      "signAndEditExecutable": false,
      "icon": "build/icons/icon.ico",
      "executableName": "ytdlp-desktop"
    },
    "nsis": {
      "shortcutName": "yt-dlp Desktop",
      "installerIcon": "build/icons/icon.ico",
      "uninstallerIcon": "build/icons/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.music",
      "artifactName": "ytdlp-desktop-${version}-mac.${ext}"
    }
  },
  "scripts": {
    "icons": "node scripts/build_icons.mjs",
    "build": "bun run icons && bunx tailwindcss -i renderer/tailwind.css -o dist/tailwind.css -m && bun build app/main.ts --target node --external electron --minify --outfile dist/main.js && bun build app/preload.ts --target node --external electron --minify --outfile dist/preload.js && bun build renderer/main.tsx --minify --outfile dist/renderer.js && cp renderer/index.html renderer/styles.css dist/ && node scripts/copy_media.mjs",
    "start": "bun run build && electron .",
    "prune:yt-dlp": "bun run scripts/prune_yt_dlp.ts",
    "vendor:yt-dlp": "scripts/build_vendored_yt_dlp.sh",
    "vendor:ffmpeg": "scripts/build_vendored_ffmpeg.sh"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/electron": "^1.6.12",
    "@types/node": "^24.3.0",
    "autoprefixer": "^10.4.20",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.4.47",
    "rcedit": "^4.0.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.13"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-switch": "^1.0.3",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "tailwind-merge": "^2.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
